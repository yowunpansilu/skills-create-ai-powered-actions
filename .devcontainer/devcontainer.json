{
  "image": "mcr.microsoft.com/devcontainers/javascript-node:24",
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "[yaml]": {
          "editor.tabSize": 2,
          "editor.defaultFormatter": "redhat.vscode-yaml",
          "editor.insertSpaces": true
        }
      }
    }
  }
}
